{
	"extends": ["../../tsconfig.json"],
	"ts-node": {
		"files": true
	},
	"compilerOptions": {
		"baseUrl": "./src",
		"outDir": "./dist",
		"declaration": true,
		"typeRoots": ["./global.d.ts", "./node_modules/@types", "../../node_modules/@types"],
		"esModuleInterop": true,
		"paths": {
			"controllers/*": ["./controllers/*"]
		}
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"]
}
